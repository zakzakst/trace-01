<!-- ▼▼▼ ページローダーのスタイル・処理 ▼▼▼ -->
<style>
.page-loader {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 99999;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fff;
}
.page-loader__spinner {
  box-sizing: border-box;
  width: 60px;
  height: 60px;
  text-indent: -9999em;
  border: 4px solid #c5b8a8;
  border-top-color: #9f886e;
  border-radius: 100%;
  animation: animPageLoader 1.2s linear infinite;
}
@keyframes animPageLoader {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
</style>
<script>
document.addEventListener('DOMContentLoaded', () => {
  const pageLoaderEl = document.getElementById('js-page-loader');
  const loadingTimeLimit = 10000;
  if (pageLoaderEl) {
    setTimeout(() => {
      pageLoaderEl.style.display = 'none';
    }, loadingTimeLimit);
  }
}, false);
</script>
<!-- ▲▲▲ ページローダーのスタイル・処理 ▲▲▲ -->
